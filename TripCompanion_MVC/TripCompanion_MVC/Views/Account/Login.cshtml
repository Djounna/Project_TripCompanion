@model UserLogin

@{
    ViewData["Title"] = "Login Page";
}

<main class="form-signin w-100 m-auto">
    <form method="post" asp-controller="Account" asp-action="checklogin">

        <h1 class="h3 mb-3 fw-normal">Merci de vous identifier</h1>

        <div class="form-floating">
            <input asp-for="Username" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label asp-for="Username">Username</label>
        </div>
        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label asp-for="Password">Password</label>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

    </form>

    <hr />

    <div>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Retour</a>
    </div>

</main>

